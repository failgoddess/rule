<?xml version="1.0" encoding="UTF-8"?>
<rule code = "RU001" name = "店铺底线折扣">
    <params>
        <param code="buyStoreCode" name = "销售门店编码" dataType="STRING" necessary="true"/>
        <param code="sendStoreCode" name = "发货门店编码" dataType="STRING" necessary="true"/>
        <param code="discount" name = "活动折扣" dataType="NUMBER"/>
    </params>
    <initDatas>
        <initData code="buyStore" name="销售门店" metaClass="store" params="code:${buyStoreCode},code2:${buyStoreCode}"/>
        <initData code="sendStore" name="发货门店" metaClass="store" params="code:${sendStoreCode}"/>
        <initData code="type" name="类型" params="卖出"/>
    </initDatas>

    <results>
        <result code="RU001R1" name = "7折" resultType="FIXED" dataType="NUMBER" data="0.7"/>
        <result code="RU001R2" name = "8折" resultType="FIXED" dataType="NUMBER" data="0.8"/>
        <result code="RU001R3" name = "9折" resultType="FIXED" dataType="NUMBER" data="0.9"/>
        <result code="RU001R4" name = "活动折扣" resultType="FORMULA" dataType="NUMBER" data="${discount}"/>
    </results>

    <graphs>
        <graph code = "RU001G1" name = "店铺底线折扣" firstBranchCode ="RU001G1B1">
            <branches>
                <branch code = "RU001G1B1" name = "门店分支">
                    <links>
                        <link code="810101" name = "销售门店开业时间 小于  365天" priority="10" nextType = "RESULT" nextResultCode ="RU001R1">
                            <conditions>
                                <condition priority="999" cover="%{gapNowDay(time:${buyStore.startTime})}" operationCode="lt" dataType="NUMBER"
                                           threshold="365" />
                            </conditions>
                        </link>
                        <link code="810102"  name = "否则" priority="20" nextType="BRANCH" nextBranchCode="RU001G1B2">
                            <conditions>
                                <!--永真条件-->
                                <condition priority="999" eternal="true"/>
                            </conditions>
                        </link>
                    </links>
                </branch>
                <branch code = "RU001G1B2" name = "区域分支">
                    <links>
                        <link code="810201" name ="销售门店区域 包含于 河北,上海" priority="10" nextType = "RESULT" nextResultCode ="RU001R3">
                            <conditions>
                                <condition priority="999" cover="${buyStore.area}" operationCode="in" dataType="STRING"
                                           thresholdComplex="1" threshold="河北,上海"/>
                            </conditions>
                        </link>
                        <link code="810202" name = "销售区域 等于 发货区域" priority="20" nextType = "RESULT" nextResultCode ="RU001R2">
                            <conditions>
                                <condition priority="999"  cover="${buyStore.area}" operationCode="eq" dataType="STRING"
                                            threshold="${sendStore.area}"/>
                            </conditions>
                        </link>
                        <link code="810203"  name = "否则" priority="20" nextType="BRANCH" nextBranchCode="RU001G1B3">
                            <conditions>
                                <!--永真条件-->
                                <condition priority="999" eternal="true"/>
                            </conditions>
                        </link>
                    </links>
                </branch>
                <branch code = "RU001G1B3" name = "活动分支">
                    <links>
                        <link code="810301" name = "活动折扣 等于 空" priority="10" nextType = "RESULT" nextResultCode ="RU001R2">
                            <conditions>
                                <condition priority="10" cover="${discount}" operationCode="en" />
                            </conditions>
                        </link>
                        <link code="810302"  name = "活动折扣 不等于 空" priority="20" nextType = "RESULT" nextResultCode ="RU001R4">
                            <conditions>
                                <condition priority="10" cover="${discount}" operationCode="nn" />
                            </conditions>
                        </link>
                    </links>
                </branch>
            </branches>
        </graph>
    </graphs>
</rule>
